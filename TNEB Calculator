#include <stdio.h>

#include <math.h>

int main() {

    int unit;
    float bill=0.0;
    scanf("%d",&unit);
    if(unit<=100){
        bill=0.0;
    }
    else if(unit<=200){
        bill=20+(unit-100)*1.5;
    }
    else if(unit<=500){
        bill=30+(100*2)+(unit -200)*3;
    }  
    else
    {
        bill=50+(100*3.5)+(300*4.6)+(unit -500)*6.6;
    }
    printf("%.2f",bill);/* Enter your code here. Read input from STDIN. Print outpu;
    t to STDOUT */    
    return 0;
}
